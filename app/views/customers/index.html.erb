<h1>DETAILS OF A CUSTOMERS</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>Paid amount</th>
      <th>Purchased Date</th>
      <th>Purchased Time</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.email, customer_path(customer) %><br/></td>
        <td><%= customer.amount %></td>
        <td><%= customer.created_at.to_date %></td>
        <td><%= customer.created_at.strftime("%I:%M %p") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

