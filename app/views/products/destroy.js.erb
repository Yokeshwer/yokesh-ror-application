var product = document.getElementById("<%= @product.id %>");
<% unless @product.errors.any? %>
  product.parentNode.parentNode.remove();
<% end %>
$('#flash_message').html('<div class="alert alert-danger" id="message_shower"><%= flash[:notice] %></div>');
setTimeout(remove_flash_message,3000);

function remove_flash_message(){
    $('#message_shower').remove();
}